@model User;

@{
    ViewData["Title"] = "Login";
}

<div class="text-center">
    <h1 class="display-4">Login</h1>
    <form class="m-2" method="post" asp-action="Verify">
        <div class="form-group row mb-3">
            <label asp-for="Username" class="col-sm-2 col-form-label">Username:</label>
            <div class="col-sm-10">
                <input asp-for="Username" class="form-control" required>
            </div>
        </div>
        <div class="form-group row mb-3">
            <label asp-for="Password" class="col-sm-2 col-form-label">Password:</label>
            <div class="col-sm-10">
                <input asp-for="Password" class="form-control" type="password" required>
            </div>
        </div>
        <div>
            <button type="submit" class="btn btn-primary">Conferma</button>
        </div>
    </form>
</div>
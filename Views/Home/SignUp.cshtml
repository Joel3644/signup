@model User;

@{
    ViewData["Title"] = "Sign Up";
}

<div class="text-center">
    <h1 class="display-4">Sign Up</h1>
    <form class="m-2" method="post" asp-action="Conferma">
        <div class="form-group row mb-3">
            <label asp-for="Name" class="col-sm-2 col-form-label">Nome:</label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" required>
            </div>
        </div>
        <div class="form-group row mb-3">
            <label asp-for="Surname" class="col-sm-2 col-form-label">Cognome:</label>
            <div class="col-sm-10">
                <input asp-for="Surname" class="form-control" required>
            </div>
        </div>
        <div class="form-group row mb-3">
            <label asp-for="Email" class="col-sm-2 col-form-label">Email:</label>
            <div class="col-sm-10">
                <input placeholder="example@domain.com" asp-for="Email" class="form-control" type="email" required>
            </div>
        </div>
        <div class="form-group row mb-3">
            <label asp-for="DateOfBirth" class="col-sm-2 col-form-label">Data di nascita:</label>
            <div class="col-sm-10">
                <input asp-for="DateOfBirth" class="form-control" type="date" required>
            </div>
        </div>
        <div class="form-group row mb-3">
            <label asp-for="Sex" class="col-sm-2 col-form-label">Sesso:</label>
            <div class="col-sm-10">
                <input asp-for="Sex" class="form-check-input" type="radio" value="Maschio" required>
                <label asp-for="Sex">Maschio</label>
                <input asp-for="Sex" class="form-check-input" type="radio" value="Femmina" required>
                <label asp-for="Sex">Femmina</label>
                <input asp-for="Sex" class="form-check-input" type="radio" value="Altro" required>
                <label asp-for="Sex">Altro</label>
            </div>
        </div>
        <div class="form-group row mb-3">
            <label asp-for="Password" class="col-sm-2 col-form-label">Password:</label>
            <div class="col-sm-10">
                <input asp-for="Password" class="form-control" type="password" required>
            </div>
        </div>
        <div>
            <button type="submit" class="btn btn-primary">Conferma</button>
        </div>
    </form>
</div>